{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://microsoft.com/fhir/roles.schema.json",
    "definitions": {
        "dataActions": {
            "enum": [
                "*",
                "read",
                "write",
                "delete",
                "hardDelete",
                "export",
                "resourceValidate",
                "reindex",
                "convertData",
                "import",
                "editProfileDefinitions"
            ]
        }
    },
    "type": "object",
    "required": [
        "roles"
    ],
    "properties": {
        "roles": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "dataActions",
                    "notDataActions",
                    "scopes"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "examples": [
                            "globalReader"
                        ],
                        "pattern": "^([a-zA-Z-_]+)$"
                    },
                    "dataActions": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/dataActions"
                        }
                    },
                    "notDataActions": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/dataActions"
                        }
                    },
                    "scopes": {
                        "type": "array",
                        "items": {
                            "$id": "#/items/properties/scopes/items",
                            "const": "/"
                        },
                        "minItems": 1,
                        "maxItems": 1
                    }
                },
                "additionalProperties": false
            }
        }
    }
}
