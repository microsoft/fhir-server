{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "sqlServerName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Name of Sql Server (existing or new). If empty, a name will be generated."
            }
        },
        "sqlLocation": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "An override location for the sql server database."
            }
        },
        "sqlAdministratorLogin": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "The login name of the administrator for the sql server."
            }
        },
        "sqlAdministratorSid": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "The SID of the administrator for the sql server."
            }
        },
        "sqlAdministratorTenantId": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "The tenant id of the administrator for the sql server."
            }
        },
        "sqlServerPrincipalType": {
            "type": "string",
            "defaultValue": "User",
            "allowedValues": [
                "User",
                "Group",
                "Application"
            ],
            "metadata": {
                "description": "The principal type of the administrator for the sql server."
            }
        },
        "networkSecurityPerimeterName": {
            "type": "string",
            "defaultValue": "[concat('nsp-', resourceGroup().name)]",
            "metadata": {
                "description": "Name of the Network Security Perimeter to create and associate resources with."
            }
        },
        "networkSecurityPerimeterProfileName": {
            "type": "string",
            "defaultValue": "defaultProfile",
            "metadata": {
                "description": "Name of the Network Security Perimeter profile to create."
            }
        }
    },
    "variables": {
        "networkSecurityPerimeterName": "[parameters('networkSecurityPerimeterName')]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/networkSecurityPerimeters",
            "apiVersion": "2021-02-01-preview",
            "name": "[variables('networkSecurityPerimeterName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "displayName": "[concat('NSP for ', resourceGroup().name)]"
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityPerimeters/profiles",
            "apiVersion": "2021-02-01-preview", 
            "name": "[concat(variables('networkSecurityPerimeterName'), '/', parameters('networkSecurityPerimeterProfileName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityPerimeters', variables('networkSecurityPerimeterName'))]"
            ],
            "properties": {
                "displayName": "[concat('Profile for ', resourceGroup().name)]"
            }
        },
        {
            "name": "[parameters('sqlServerName')]",
            "type": "Microsoft.Sql/servers",
            "apiVersion": "2020-11-01-preview",
            "location": "[parameters('sqlLocation')]",
            "tags": {
                "FhirServerSolution": "FhirServerSqlServer"
            },
            "properties": {
                "version": "12.0",
                "administrators": {
                    "administratorType": "ActiveDirectory",
                    "azureADOnlyAuthentication": true,
                    "principalType": "[parameters('sqlServerPrincipalType')]",
                    "login": "[parameters('sqlAdministratorLogin')]",
                    "sid": "[parameters('sqlAdministratorSid')]",
                    "tenantId": "[parameters('sqlAdministratorTenantId')]"
                }
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityPerimeters/resourceAssociations",
            "apiVersion": "2021-02-01-preview",
            "name": "[concat(variables('networkSecurityPerimeterName'), '/sqlserver-', uniqueString(parameters('sqlServerName')))]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityPerimeters', variables('networkSecurityPerimeterName'))]",
                "[resourceId('Microsoft.Network/networkSecurityPerimeters/profiles', variables('networkSecurityPerimeterName'), parameters('networkSecurityPerimeterProfileName'))]",
                "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]"
            ],
            "properties": {
                "privateLinkResource": {
                    "id": "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]"
                },
                "profile": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityPerimeters/profiles', variables('networkSecurityPerimeterName'), parameters('networkSecurityPerimeterProfileName'))]"
                },
                "accessMode": "Learning"
            }
        }
    ]
}
